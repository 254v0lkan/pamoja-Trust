<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms/" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>GeoShape Demo</h:title>
    <model>
      <instance>
        <geoshape_test id="geo_shape_demo">
          <shape/>
          <meta>
            <instanceID/>
          </meta>
        </geoshape_test>
      </instance>
      <bind nodeset="/geoshape_test/shape" type="geoshape"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/geoshape_test/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <input ref="/geoshape_test/shape">
      <label>Test Drawing a Shape</label>
      <hint>GPS coordinates can only be collected when outside.</hint>
    </input>
  </h:body>
</h:html>
